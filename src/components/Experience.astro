---
// Experience Section
const experiences = [
  {
    period: "July 2023 — Present",
    role: "Microsoft Dynamics AX 2012 R3 Developer",
    company: "PT. Gandum Mas Kencana",
    companyUrl: "https://gandummas.co.id/",
    description: "Responsible for creating and maintaining custom code based from the business requirements. Developing integration solutions using ASP.NET Web API and Flutter for sparepart management and journal payment systems.",
    technologies: ["X++", "C#", "Dynamics AX 2012 R3", "ASP.NET Web API", "Flutter", "Dart"]
  },
  {
    period: "February 2019 — July 2023",
    role: "Microsoft Dynamics Ecosystem Developer",
    company: "PT. Intikom Berlian Mustika",
    companyUrl: "https://intikom.com/",
    description: "Responsible for developing solutions based from business requirements that depend on multiple Microsoft Dynamics Products, including PowerApps, Power Automate, Dynamics Finance and Operations, Dynamics Business Central, Azure DevOps, and Microsoft LCS.",
    technologies: ["X++", "AL Language", "C#", "PowerApps", "Power Automate", "Dynamics 365", "Azure DevOps"]
  },
  {
    period: "January 2018 — February 2019",
    role: "Microsoft Dynamics AX 2012 R3 Developer",
    company: "PT. Visionet Data Internasional",
    companyUrl: "https://www.visionet.co.id/",
    description: "Microsoft Dynamics AX 2012 R3 Developer, responsible for creating and maintaining custom code based from the business requirements.",
    technologies: ["X++", "Dynamics AX 2012 R3", "SQL Server"]
  }
];
---

<section id="experience" class="section">
  <h2 class="section-title">Experience</h2>
  <div class="experience-list">
    {experiences.map((exp) => (
      <div class="experience-item">
        <div class="period">{exp.period}</div>
        <div class="experience-content">
          <h3 class="role">
            {exp.role} · <a href={exp.companyUrl} target="_blank" rel="noopener noreferrer" class="company-link">{exp.company}</a>
          </h3>
          <p class="description">{exp.description}</p>
          <div class="tech-tags">
            {exp.technologies.map((tech) => (
              <span class="tech-tag">{tech}</span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
  <a href="/resume.pdf" class="resume-link" target="_blank">
    <span>View Full Résumé</span>
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="7" y1="17" x2="17" y2="7"></line>
      <polyline points="7 7 17 7 17 17"></polyline>
    </svg>
  </a>
</section>

<style>
  .section {
    margin-bottom: 6rem;
    scroll-margin-top: 4rem;
  }

  .section-title {
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(8px);
    background-color: rgba(15, 23, 42, 0.8);
    padding: 1.5rem 0;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--slate-200);
  }

  @media (min-width: 1024px) {
    .section-title {
      display: none;
    }
  }

  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .experience-item {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
    padding: 1.5rem;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
  }

  @media (min-width: 640px) {
    .experience-item {
      grid-template-columns: 150px 1fr;
    }
  }

  .experience-item:hover {
    background-color: rgba(30, 41, 59, 0.5);
    box-shadow: 0 0 0 1px rgba(148, 163, 184, 0.1);
  }

  .period {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--slate-400);
  }

  .experience-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .role {
    font-size: 1rem;
    font-weight: 500;
    color: var(--slate-200);
    line-height: 1.4;
  }

  .company-link {
    color: var(--teal-300);
    transition: color 0.2s ease;
  }

  .company-link:hover {
    color: var(--teal-400);
  }

  .description {
    color: var(--slate-400);
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tech-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: rgba(94, 234, 212, 0.1);
    color: var(--teal-300);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .resume-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 2rem;
    color: var(--slate-200);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .resume-link:hover {
    color: var(--teal-300);
  }

  .resume-link svg {
    transition: transform 0.2s ease;
  }

  .resume-link:hover svg {
    transform: translate(4px, -4px);
  }
</style>
