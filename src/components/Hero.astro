<style>
  .hero {
    position: sticky;
    top: 0;
    max-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 6rem 0;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .name {
    font-size: 3rem;
    font-weight: 700;
    color: var(--slate-200);
    line-height: 1.1;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--slate-200);
    margin-bottom: 0.5rem;
  }

  .tagline {
    max-width: 300px;
    color: var(--slate-400);
    font-size: 1rem;
    margin-bottom: 2rem;
  }

  .nav {
    display: none;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 1024px) {
    .nav {
      display: flex;
    }
  }

  .nav-link {
    display: flex;
    align-items: center;
    padding: 0.75rem 0;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.2s ease;
    color: var(--slate-400);
  }

  .nav-link:hover {
    color: var(--slate-200);
  }

  .nav-link.active {
    color: var(--slate-200);
  }

  .nav-indicator {
    display: block;
    width: 2rem;
    height: 1px;
    background-color: var(--slate-600);
    margin-right: 1rem;
    transition: all 0.2s ease;
  }

  .nav-link:hover .nav-indicator {
    width: 4rem;
    background-color: var(--slate-200);
  }

  .nav-link.active .nav-indicator {
    width: 4rem;
    background-color: var(--slate-200);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: auto;
  }

  .social-links a {
    color: var(--slate-400);
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: var(--teal-300);
  }

  @media (max-width: 1023px) {
    .hero {
      position: relative;
      max-height: none;
      padding: 4rem 0 2rem;
    }
    
    .name {
      font-size: 2.5rem;
    }
  }
</style>
