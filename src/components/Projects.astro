    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--slate-200);
    margin: 0;
  }

  .project-title-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--slate-200);
    transition: color 0.2s ease;
  }

  .project-title-link:hover {
