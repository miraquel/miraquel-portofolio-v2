  }

  .external-link {
    transition: transform 0.2s ease;
  }

  .project-period {
    color: var(--slate-400);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-description {
    color: var(--slate-400);
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .repository-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .repo-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background-color: rgba(148, 163, 184, 0.1);
    border: 1px solid rgba(148, 163, 184, 0.2);
    color: var(--slate-300);
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .repo-link:hover {
    background-color: rgba(94, 234, 212, 0.1);
    border-color: var(--teal-400);
    color: var(--teal-300);
  }

  .repo-link svg {
    flex-shrink: 0;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tech-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: rgba(94, 234, 212, 0.1);
    color: var(--teal-300);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .archive-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 2rem;
    color: var(--slate-200);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .archive-link:hover {
    color: var(--teal-300);
  }

  .archive-link svg {
    transition: transform 0.2s ease;
  }

  .archive-link:hover svg {
    transform: translate(4px, -4px);
  }

  /* Image Modal Styles */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(15, 23, 42, 0.95);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    padding: 2rem;
  }

  .modal.active {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    max-width: 90vw;
    max-height: 90vh;
    position: relative;
    animation: modalZoom 0.3s ease;
  }

  @keyframes modalZoom {
    from {
      transform: scale(0.8);
    }
    to {
      transform: scale(1);
    }
  }

  .modal-content img {
    max-width: 100%;
    max-height: 90vh;
    width: auto;
    height: auto;
    border-radius: 0.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(148, 163, 184, 0.2);
  }

  .modal-close {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: rgba(30, 41, 59, 0.8);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 0.5rem;
    padding: 0.75rem;
    color: var(--slate-200);
    cursor: pointer;
    transition: all 0.2s ease;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-close:hover {
    background: rgba(30, 41, 59, 1);
    color: var(--teal-300);
    transform: rotate(90deg);
  }
</style>
